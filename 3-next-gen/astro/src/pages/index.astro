---
import { PrismaClient } from "@prisma/client";
const db = new PrismaClient();

const posts = await db.post.findMany();
---

<div>
  <h1>Blog posts</h1>

  <ul>
    {
      posts.map((post) => (
        <li>
          <h2>{post.title}</h2>
          <p>{post.body}</p>
        </li>
      ))
    }
  </ul>
</div>
